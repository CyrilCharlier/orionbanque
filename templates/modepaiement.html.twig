{{ include('partials/main.html.twig') }}

    <head>

        {{ include('partials/title-meta.html.twig', {title: 'Gestion des Modes de Paiement'}) }}

        <!-- gridjs css -->
        <link rel="stylesheet" href="/libs/gridjs/theme/mermaid.min.css">
        <link rel="stylesheet" href="/libs/flatpickr/flatpickr.min.css">
        <link rel="stylesheet" href="/libs/@simonwep/pickr/themes/classic.min.css"/>

        {{ include('partials/head-css.html.twig') }}

    </head>

    {{ include('partials/body.html.twig', {dark: true}) }}

    <!-- Begin page -->
    <div id="layout-wrapper">

        {{ include('partials/topbar.html.twig', {pagetitle: '', title: 'Modes de Paiement'}) }}

        {{ include('partials/sidebar.html.twig') }}

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10">
                            <div class="card">
                                <div class="card-header justify-content-between d-flex align-items-center">
                                    <h4 class="card-title">Liste des Banques</h4>
                                    <button type="button" class="btn btn-outline-success" id="btn_add_modepaiement"><i class="uil uil-plus me-2"></i> Ajouter</button>
                                </div><!-- end card header -->
                                <div class="card-body">

                                        <table class="table table-sm table-striped table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Action</th>
                                                    <th class="text-center">Libell&eacute;</th>
                                                    <th class="text-center">Actif</th>
                                                    <th class="text-center">DÃ©bit</th>
                                                    <th class="text-center">Date cr&eacute;ation</th>
                                                    <th class="text-center">Date modification</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for modepaiement in modepaiements %}
                                                <tr>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-outline-primary btn-sm" id="btn_mod_modepaiement_{{modepaiement.id}}" 
                                                            data-modepaiementid="{{ modepaiement.id }}" 
                                                            data-modepaiementlibelle="{{ modepaiement.libelle }}" 
                                                            data-modepaiementactif="{{ modepaiement.actif }}"
                                                            data-modepaiementdebit="{{ modepaiement.debit }}">Modifier</button>
                                                    </td>
                                                    <td{% if not modepaiement.actif %} class="text-decoration-line-through"{% endif %}>{{ modepaiement.libelle }}</td>
                                                    <td>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" {% if modepaiement.actif %}checked=""{% endif %} disabled>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" {% if modepaiement.debit %}checked=""{% endif %} disabled>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">{{ modepaiement.createdAt|date("d-m-Y G:i:s") }}</td>
                                                    <td class="text-center">{{ modepaiement.updatedAt|date("d-m-Y G:i:s") }}</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table><!-- end table -->
                  
                                </div>
                                <!-- end card body -->
                            </div>
                            <!-- end card -->
                        </div>
                        <!-- end col -->
                        <div class="col-lg-1"></div>
                    </div>

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            {{ include('partials/footer.html.twig') }}
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    {{ include('partials/vendor-scripts.html.twig') }}

    <script src="/js/app.js"></script>
    <script src="/js/ob.js"></script>

    </body>

</html>