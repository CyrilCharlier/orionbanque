{{ include('partials/main.html.twig') }}

    <head>
        
        {{ include('partials/title-meta.html.twig', {title: 'Enregistrement'}) }}

        {{ include('partials/head-css.html.twig') }}

    </head>

    <body class="bg-white">

        <div class="auth-page d-flex align-items-center min-vh-100">
            <div class="container-fluid p-0">
                <div class="row g-0">
                    <div class="col-xxl-3 col-lg-4 col-md-5">
                            <div class="d-flex flex-column h-100 py-5 px-4">
                                <div class="text-center text-muted mb-2">
                                    <div class="pb-3">
                                        <a href="/">
                                            <span class="logo-lg">
                                                <img src="/images/logo-sm.svg" alt="" height="24"> <span class="logo-txt">{{app_name}}</span>
                                            </span>
                                        </a>
                                        <p class="text-muted font-size-15 w-75 mx-auto mt-3 mb-0">{{app_description}}</p>
                                    </div>
                                </div>
        
                                <div class="my-auto">
                                    <div class="p-3 text-center">
                                        <img src="/images/auth-img.png" alt="" class="img-fluid">
                                    </div>
                                </div>
        
                                <div class="mt-4 mt-md-5 text-center">
                                        <p class="mb-0">© <script>document.write(new Date().getFullYear())</script> {{app_name}}. Conçu <i class="mdi mdi-heart text-danger"></i> par KyrilK</p>
                                </div>
                            </div>
                        
                        <!-- end auth full page content -->
                    </div>
                    <!-- end col -->
    
                    <div class="col-xxl-9 col-lg-8 col-md-7">
                        <div class="auth-bg bg-light py-md-5 p-4 d-flex">
                            <div class="bg-overlay-gradient"></div>
                            <!-- end bubble effect -->
                            <div class="row justify-content-center g-0 align-items-center w-100">
                                <div class="col-xl-4 col-lg-8">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="px-3 py-3">
                                                <div class="text-center">
                                                    <h5 class="mb-0">S'enregistrer</h5>
                                                    <p class="text-muted mt-2">Obtenez un compte gratuit maintenant.</p>
                                                </div>
                                                {% if form_errors(registrationForm.email) is not empty %}
                                                    <div class="alert font-size-14 alert-danger text-center mb-3 mt-5" role="alert">
                                                        {{ form_errors(registrationForm.email) }}
                                                    </div>
                                                {% endif %}
                                                {{ form_start(registrationForm, { 'attr': { 'class': 'mt-4 pt-2' }}) }}
                                                    <div class="form-floating form-floating-custom mb-3">
                                                        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder' : 'Email' } }) }}
                                                        <label for="registration_form_email">Email</label>
                                                        <div class="form-floating-icon">
                                                            <i class="uil uil-envelope-alt"></i>
                                                        </div>
                                                    </div>
                                                    <!--<div class="form-floating form-floating-custom mb-3">
                                                        <input type="text" class="form-control" id="input-username" placeholder="Enter User Name">
                                                        <label for="input-username">Username</label>
                                                        <div class="form-floating-icon">
                                                            <i class="uil uil-users-alt"></i>
                                                        </div>
                                                    </div>-->
                                                    <div class="form-floating form-floating-custom mb-3">
                                                    {{ form_widget(registrationForm.plainPassword, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Mot de passe' } }) }}
                                                        <label for="registration_form_plainPassword">Mot de passe</label>
                                                        <div class="form-floating-icon">
                                                            <i class="uil uil-padlock"></i>
                                                        </div>
                                                    </div>
                
                                                    <div class="py-1">
                                                        <p class="mb-0">En s'enregistrant vous acceptez les <a href="#" class="text-primary">C.G.U.</a> d'{{app_name}}</p>
                                                    </div>
                
                                                    <div class="mt-3">
                                                        <button class="btn btn-primary w-100" type="submit">Soumettre</button>
                                                    </div>
            
                                                    <div class="mt-4 pt-3 text-center">
                                                        <p class="text-muted mb-0">Déjà un compte ? <a href="{{ path('app_login') }}" class="fw-semibold text-decoration-underline"> Connectez-vous </a> </p>
                                                    </div>
                
                                                {{ form_end(registrationForm) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container fluid -->
        </div>
        <!-- end authentication section -->

        {{ include('partials/vendor-scripts.html.twig') }}

    </body>
</html>